<h2>All Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}", class: 'shelter-link' %>: <%= @shelter.pet_count%></h2>

  <% @shelter.pets.each do |pet| %>
    <section id="<%= pet.id %>-section">
    <img src=<%= pet.image %> class="img-thumbnail" id="img-<%= pet.id %>"></img>
    <h2><%= link_to "#{pet.name}", "/pets/#{pet.id}", class: 'shelter-link' %></h2>
    <p><b>Approximate Age: </b><%= pet.age %><br>
    <b>Sex: </b><%= pet.sex %><br></p></section>
  <% end %>

  <%= link_to 'New Pet', "/shelters/#{@shelter.id}/pets/new", class: 'btn btn-info' %>
