<h1>Update Pet</h1>

<%= form_tag("/pets/#{@pet.id}", method: :patch) do %>
  <%= label_tag "Image URL:" %>
  <%= text_field_tag :image, @pet.image %><br>
  <%= label_tag "Name:" %>
  <%= text_field_tag :name, @pet.name %><br>
  <%= label_tag "Description:" %>
  <%= text_field_tag :desc, @pet.desc %><br>
  <%= label_tag "Age (approx):" %>
  <%= text_field_tag :age, @pet.age%><br>
  <%= label_tag "Sex:" %>
  <%= text_field_tag :sex, @pet.sex%><br>
  <button type="submit" class="btn btn-info">Submit</button>
<% end %>
